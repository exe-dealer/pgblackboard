{
  "name": "pgblackboard-ui",
  "description": "pgBlackboard user interface",
  "author": "exe-dealer <exe-dealer@yandex.ru>",
  "private": true,
  "version": "0.0.1",
  "devDependencies": {
    "jscs": "~1.11.3",
    "jshint": "^2.7.0",
    "serve-static": "~1.9.3",
    "connect": "~3.3.5",
    "connect-redirection": "0.0.1",
    "body-parser": "~1.12.4"
  },
  "dependencies": {
    "knockout": "~3.3.0",
    "leaflet": "~0.7.3",
    "codemirror": "~5.0.0",
    "jake": "~8.0.12",
    "closurecompiler": "^1.5.1",
    "autoprefixer-core": "~5.1.7",
    "csso": "~1.3.11",
    "jasmine": "~2.2.1"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "build": "jake",
    "test": "JASMINE_CONFIG_PATH=jasmine.json jasmine",
    "start": "nodejs server.js",
    "lint": "npm run jshint && npm run jscs",
    "jshint": "jshint . --exclude node_modules",
    "jscs": "jscs . --exclude node_modules --verbose",
    "clean": "jake clean"
  },
  "jshintConfig": {
    "sub": true,
    "esnext": true
  },
  "jscsConfig": {
    "preset": "yandex",
    "esnext": true,
    "requireDotNotation": null,
    "disallowSpacesInsideObjectBrackets": null,
    "disallowQuotedKeysInObjects": null,
    "disallowMultipleVarDecl": "exceptUndefined",
    "validateIndentation": 4,
    "excludeFiles": [
      "node_modules/**"
    ]
  }
}
