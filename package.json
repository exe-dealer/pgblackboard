{
  "name": "pgblackboard-ui",
  "description": "pgBlackboard ui",
  "devDependencies": {
    "jscs": "~1.11.3",
    "jshint": "^2.7.0"
  },
  "dependencies": {
    "knockout": "~3.3.0",
    "leaflet": "~0.7.3",
    "codemirror": "~5.0.0",

    "jake": "~8.0.12",
    "closurecompiler": "^1.5.1",
    "autoprefixer-core": "~5.1.7",
    "csso": "~1.3.11",
    "jasmine": "~2.2.1",
    "uglify-js": "~2.4.17"
  },
  "version": "0.2.0",
  "scripts": {
    "it": "jake && cargo run",
    "test": "npm run test-ui && npm run test-server",
    "test-ui": "JASMINE_CONFIG_PATH=jasmine.json jasmine",
    "test-server": "jake && cargo test",
    "build": "jake && cargo build",
    "jshint": "jshint src --exclude src/bundle-index.js",
    "jscs": "jscs src --exclude src/bundle-index.js --verbose",

    "build-ui": "jake"
  },
  "author": "",
  "license": "BSD-2-Clause",
  "jshintConfig": {
    "sub": true
  },
  "jscsConfig": {
    "preset": "yandex",
    "esnext": true,
    "requireDotNotation": null,
    "disallowSpacesInsideObjectBrackets": null,
    "disallowQuotedKeysInObjects": null,
    "disallowMultipleVarDecl": "exceptUndefined",
    "validateIndentation": 4
  }
}
