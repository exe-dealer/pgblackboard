{
  "name": "pgblackboard-ui",
  "description": "pgBlackboard user interface",
  "author": "exe-dealer <exe-dealer@yandex.ru>",
  "private": true,
  "version": "0.0.0",
  "dependencies": {
    "esprima": "^3.1.3",
    "fs-promise": "^2.0.2",
    "postcss": "^5.2.16",
    "postcss-cssnext": "^2.10.0",
    "postcss-csso": "^2.0.0",
    "postcss-import": "^9.1.0",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "installdep-and-build": "npm install --production && npm run build",
    "build": "node ui/build.js",
    "test": "JASMINE_CONFIG_PATH=ui/jasmine.json jasmine",
    "start": "nodejs ui/server.js",
    "lint": "npm run eslint && npm run jscs",
    "eslint": "eslint ui --ext .html",
    "jscs": "jscs ui --verbose",
    "clean": "jake clean",
    "fontello-up": "fontello-cli --config ui/style/fontello/config.json --css ui/style/fontello/css --font ui/style/fontello/font install"
  },
  "jscsConfig": {
    "preset": "yandex",
    "esnext": true,
    "requireDotNotation": null,
    "disallowSpacesInsideObjectBrackets": null,
    "disallowQuotedKeysInObjects": null,
    "disallowMultipleVarDecl": "exceptUndefined",
    "validateIndentation": 2,
    "excludeFiles": [
      "node_modules/**",
      "ui/output/**",
      "ui/build.js",
      "ui/fontello"
    ],
    "extract": [
      "**"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "amd": true
    },
    "ecmaFeatures": {
      "blockBindings": true,
      "templateStrings": true
    },
    "plugins": [
      "html"
    ],
    "rules": {
      "no-unused-vars": [
        2,
        {
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
