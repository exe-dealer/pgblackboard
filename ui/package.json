{
  "name": "pgblackboard-ui",
  "description": "pgBlackboard user interface",
  "author": "exe-dealer <exe-dealer@yandex.ru>",
  "license": "BSD-2-Clause",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/exe-dealer/pgblackboard"
  },
  "devDependencies": {
    "jscs": "~1.11.3",
    "jshint": "^2.7.0",
    "serve-static": "~1.9.3",
    "connect": "~3.3.5",
    "connect-redirection": "0.0.1",
    "body-parser": "~1.12.4"
  },
  "dependencies": {
    "knockout": "~3.3.0",
    "leaflet": "~0.7.3",
    "codemirror": "~5.0.0",
    "jake": "~8.0.12",
    "closurecompiler": "^1.5.1",
    "autoprefixer-core": "~5.1.7",
    "csso": "~1.3.11",
    "jasmine": "~2.2.1",
    "uglify-js": "~2.4.17"
  },
  "version": "0.0.0",
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "build": "npm install --production && jake",
    "test": "npm install --production && JASMINE_CONFIG_PATH=jasmine.json jasmine",
    "start": "npm install && nodejs server.js",
    "lint": "npm run install && npm run jshint && npm run jscs",
    "jshint": "jshint src --exclude src/bundle-index.js",
    "jscs": "jscs src --exclude src/bundle-index.js --verbose",
    "clean": "jake clean"
  },
  "jshintConfig": {
    "sub": true
  },
  "jscsConfig": {
    "preset": "yandex",
    "esnext": true,
    "requireDotNotation": null,
    "disallowSpacesInsideObjectBrackets": null,
    "disallowQuotedKeysInObjects": null,
    "disallowMultipleVarDecl": "exceptUndefined",
    "validateIndentation": 4
  }
}
